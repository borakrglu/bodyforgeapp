# BodyForge Environment Variables
# Copy this file to .env and fill in your values

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database

# Auth.js Configuration
AUTH_SECRET=your-random-secret-key-here-generate-with-openssl-rand-base64-32
AUTH_TRUST_HOST=true

# Base URLs
NEXT_PUBLIC_BASE_URL=https://bodyforge.app
EXPO_PUBLIC_BASE_URL=https://bodyforge.app
EXPO_PUBLIC_PROXY_BASE_URL=https://bodyforge.app

# Stripe (Premium Subscriptions - Web)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_MONTHLY=price_xxx  # Create in Stripe Dashboard
STRIPE_PRICE_YEARLY=price_xxx   # Create in Stripe Dashboard

# RevenueCat (Premium Subscriptions - Mobile)
REVENUECAT_API_KEY=xxx
EXPO_PUBLIC_REVENUECAT_IOS_KEY=appl_xxx
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=goog_xxx

# iyzico (Turkey PT Payments)
IYZICO_API_KEY=xxx
IYZICO_SECRET_KEY=xxx
IYZICO_BASE_URL=https://api.iyzipay.com  # or https://sandbox-api.iyzipay.com for test

# Paddle (International PT Payments)
PADDLE_API_KEY=xxx
PADDLE_WEBHOOK_SECRET=xxx

# Expo Project (for auth)
EXPO_PUBLIC_PROJECT_GROUP_ID=your-project-group-id
EXPO_PUBLIC_HOST=bodyforge.app

